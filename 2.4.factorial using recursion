#include<stdio.h>
int factorial(int n);
int main()
{
  int num;
  printf("Senthamizhselvan\n192321143");
  printf("\nFactorial using recursion\n");
  printf("Enter the integer: ");
  scanf("%d",&num);
  printf("the factorial of %d is:%d", num, factorial(num));
return 0;
}
int factorial(int n)
{
  if (n==0)
  {
    return 1;
  }
  else
  {
    return n*factorial(n-1);
  }
}

